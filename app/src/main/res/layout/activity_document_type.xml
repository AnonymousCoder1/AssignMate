<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".documentType"
    android:orientation="vertical"
    android:background="@drawable/moonlit_asteroid_gradient">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Select Category"
    android:textColor="@color/white"
    android:textSize="30sp"
    android:id="@+id/text"
    android:fontFamily="@font/sarabun"
    android:textStyle="bold"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/assignmentCard"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_note">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:src="@drawable/book_stack"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:text="Theory Assignments"
            android:layout_gravity="center"

            android:textColor="@color/secondary"
            android:textSize="25sp"
            android:fontFamily="@font/sarabun"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/noteCard"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_note">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:src="@drawable/assignments"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:text="Notes"
            android:textColor="@color/secondary"
            android:textSize="25sp"
            android:layout_gravity="center"

            android:fontFamily="@font/sarabun"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/practicalCard"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_note">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:src="@drawable/hacker"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:text="Practicals"
            android:layout_gravity="center"

            android:textColor="@color/secondary"
            android:textSize="25sp"
            android:fontFamily="@font/sarabun"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/paperCard"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_note">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:src="@drawable/paper"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:layout_gravity="center"

            android:text="Question Banks"
            android:textColor="@color/secondary"
            android:textSize="25sp"

            android:fontFamily="@font/sarabun"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>